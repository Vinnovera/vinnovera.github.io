.hljs
	padding: 0.8em
	font-size: 13px
	line-height: 1.45em
	background: #002b36
	overflow-y: hidden;
	overflow-x: auto;
	white-space: pre;

	&::-webkit-scrollbar
		height: .5em
		background: rgba(255,255,255,0.15)
	&::-webkit-scrollbar-thumb:horizontal
		background: rgba(255,255,255,0.2)
		-webkit-border-radius: 4px
		border-radius: 4px
